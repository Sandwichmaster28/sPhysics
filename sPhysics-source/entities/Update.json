{
  "name": "Update",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Version number (e.g. 1.2.0)"
    },
    "title": {
      "type": "string",
      "description": "Headline of the update"
    },
    "description": {
      "type": "string",
      "description": "Detailed notes about changes"
    },
    "type": {
      "type": "string",
      "enum": ["major", "minor", "patch", "hotfix"],
      "default": "minor"
    },
    "date": {
      "type": "string",
      "format": "date"
    }
  },
  "required": ["version", "title"]
}